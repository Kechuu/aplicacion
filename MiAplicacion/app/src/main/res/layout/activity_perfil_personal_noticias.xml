<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/idNombreNegocioPerfilPersonalNoticias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del noticiero"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/idSeguidoresPerfilPersonalNoticias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Seguidores"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/idFotoPerfilPerfilPersonalNoticias"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/idPublicacionesPerfilPersonalNoticias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cantidad"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/idRubroPerfilPersonalNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rubro del noticiero"
                android:gravity="center"/>
            <TextView
                android:id="@+id/idDirecionPerfilPersonalNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direccion del noticiero"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/idBotonConfigurarPerfilPersonalNoticias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Configurar Perfil"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/idBotonCrearPublicacionPersonalNoticias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Crear Publicacion"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInicioPerfilPersonalNoticias"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>