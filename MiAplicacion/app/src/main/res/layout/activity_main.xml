<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp">
                <TextView
                    android:id="@+id/idDiasInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hoy Salen los Pares"
                    android:textSize="26sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/idNoticiasInicio"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageButton
                    android:id="@+id/idComidaInicio"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/idRopaInicio"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageButton
                    android:id="@+id/idBebeInicio"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/idFarmaciaInicio"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@mipmap/ic_launcher"/>
                <ImageButton
                    android:id="@+id/idContactoInicio"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:src="@mipmap/ic_launcher"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/idPerfilInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Perfil"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>