<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="1sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/idFotoPerfilPublicacion"
                android:layout_width="54sp"
                android:layout_height="54sp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/idNombreNegocioPublicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Nombre del negocio"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:padding="5sp"
                        android:background="#A8D4E8"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/idTituloPublicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Titulo de la publicacion"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:padding="5sp"
                        android:background="#A8D4E8"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5sp">
            <ImageView
                android:id="@+id/idFotoPublicacion"
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#38A2F6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="$"
                    android:textColor="#000000"
                    android:background="#38A2F6"/>
                <TextView
                    android:id="@+id/idPrecioPublicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Precio del producto"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:background="#38A2F6"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <ImageButton
                        android:id="@+id/idMensajePublicacion"
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:src="@android:drawable/ic_menu_send"
                        android:layout_gravity="right"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp">
                <TextView
                    android:id="@+id/idDescripcionPublicacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Descripcion de las publicaciones"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:background="#38A2F6"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>