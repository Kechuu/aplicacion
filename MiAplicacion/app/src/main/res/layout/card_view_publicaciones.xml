<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cardview:cardCornerRadius="10sp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/idFotoPerfilPublicacion"
                android:layout_width="44sp"
                android:layout_height="44sp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/idNombreNegocioPublicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Nombre del negocio"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/idTituloPublicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Titulo de la publicacion"
                        android:layout_weight="1"
                        android:gravity="right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5sp">
            <ImageView
                android:id="@+id/idFotoPublicacion"
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/idLikePublicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Likes"
                    android:padding="5sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/idPrecioPublicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Precio del producto"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp">
                    <ImageButton
                        android:id="@+id/idMeGustaPublicacion"
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:src="@drawable/abc_vector_test"
                        android:padding="5sp"/>
                    <ImageButton
                        android:id="@+id/idMensajePublicacion"
                        android:layout_width="34sp"
                        android:layout_height="34sp"
                        android:src="@drawable/abc_vector_test"
                        android:padding="5sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/idStockPublicacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Stock"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/idDescripcionPublicacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Descripcion de las publicaciones"/>
            <TextView
                android:id="@+id/idHoraPublicacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Hora de la publicacion"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>